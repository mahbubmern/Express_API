		<script>
			
    $('.soro-data-table').DataTable();

			const getImageLink = document.getElementById('upload_photo');
			const setImage = document.querySelector('.imageLink');

			if (getImageLink) {
				getImageLink.onchange =(e)=>{
				getImageUrlLink = URL.createObjectURL(e.target.files[0])
				
				setImage.setAttribute('src', getImageUrlLink);
			}
			}

			const delete_btn = document.querySelectorAll('.delete-btn');

			if (delete_btn) {
				delete_btn.forEach((item)=>{
					item.onclick = (e)=>{
					const asking = confirm('Are You Sure to Delete ??')

					if(asking){
						return true
					}else{
						return false
					}
				}
				})
				
			}


		</script>
